<div class="row text-center">
  <div class="col-12 mt-3">
    <h3>
    Create Card Token

    </h3>
  </div>
<div class="col-12 mt-3">   
<form method="post" id="addCardForm" action="/cardTokens/add">
  <div class="form-group row">
    <label for="inputCardNumber" class="col-sm-3 col-form-label">Card Number</label>
    <div class="col-sm-9">
      <input type="number" class="form-control" id="inputCardNumber" name="cardNumber" placeholder="Enter Card Number">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputSecurityCode" class="col-sm-3 col-form-label">Security Code</label>
    <div class="col-sm-9">
      <input type="number" class="form-control" id="inputSecurityCode" name="securityCode" placeholder="Enter Security Code">
    </div>
  </div>
   <div class="form-group row">
    <label for="inputdueDate" class="col-sm-3 col-form-label">Due Date</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="inputdueDate" name="dueDate" placeholder="Enter Due Date">
    </div>
  </div>
     <div class="form-group row">
    <label for="inputcardHolder" class="col-sm-3 col-form-label">Card Holder</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="inputcardHolder" name="cardHolder" placeholder="Enter Card Holder">
    </div>
  </div>
       <div class="form-group row">
    <label for="inputcardHolderTypeId" class="col-sm-3 col-form-label">Card Holder ID Type</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="inputcardHolderTypeId" name="cardHolderTypeId" placeholder="Enter Card Holder Type ID">
    </div>
  </div>
       <div class="form-group row">
    <label for="inputcardHolderNumberId" class="col-sm-3 col-form-label">Card Holder ID Number</label>
    <div class="col-sm-9">
      <input type="number" class="form-control" id="inputcardHolderNumberId" name="cardHolderNumberId" placeholder="Enter Card Holder Number ID">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-12 mt-3">
      <button type="button" id="btnSubmitCard" class="btn btn-primary">Add Card</button>
    </div>
  </div>
</form>
</div> 

<div class="col-12 mt-3">
  <table class="table" id="myTableCard">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Token</th>
      <th scope="col">cardNumber</th>
      <th scope="col">securityCode</th>
      <th scope="col">dueDate</th>
      <th scope="col">cardHolder</th>
      <th scope="col">Id Type</th>
      <th scope="col">Id Number</th>

    </tr>
  </thead>
  <tbody>    
  </tbody>
</table>
</div>
</div>


<div class="row text-center">
  <div class="col-12 mt-3">
    <h3>
    Create Card Payment

    </h3>
  </div>
<div class="col-12 mt-3">   
<form method="post" id="addPaymentForm" action="/payments/add">
  <div class="form-group row">
    <label for="inputName" class="col-sm-3 col-form-label">Name</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="inputName" name="name" placeholder="Enter Card Name">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputEmail" class="col-sm-3 col-form-label">Email</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="inputEmail" name="email" placeholder="Enter Email">
    </div>
  </div>
   <div class="form-group row">
    <label for="inputDescription" class="col-sm-3 col-form-label">Description</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="inputDescription" name="description" placeholder="Enter Description">
    </div>
  </div>
     <div class="form-group row">
    <label for="inputAmount" class="col-sm-3 col-form-label">Amount</label>
    <div class="col-sm-9">
      <input type="number" class="form-control" id="inputAmount" name="amount" placeholder="Enter Amount $">
    </div>
  </div>
       <div class="form-group row">
    <label for="inputCardToken" class="col-sm-3 col-form-label">Card Token</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="inputCardToken" name="cardToken" placeholder="Enter Card Token">
    </div>
  </div>
    <div class="form-group row">
    <label for="inputNumberFees" class="col-sm-3 col-form-label"># of Fees</label>
    <div class="col-sm-9">
      <input type="number" class="form-control" id="inputNumberFees" name="numberFees" placeholder="Enter # of fees">
    </div>
  </div>
    <div class="form-group row">
    <label for="inputPaymentMethod" class="col-sm-3 col-form-label">Payment Method</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="inputPaymentMethod" name="paymentMethod" placeholder="Enter Payment Method">
    </div>
  </div>
      <div class="form-group row">
    <label for="inputReferenceNumber" class="col-sm-3 col-form-label">Reference Number</label>
    <div class="col-sm-9">
      <input type="number" class="form-control" id="inputReferenceNumber" name="referenceNumber" placeholder="Enter Preference Number">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-12 mt-3">
      <button type="button" id="btnSubmitPayment" class="btn btn-primary">Add Payment</button>
    </div>
  </div>
</form>
</div> 

<div class="col-12 mt-3">
  <table class="table" id="myTablePayment">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Description</th>
      <th scope="col">Amount</th>
      <th scope="col">Card Token</th>
      <th scope="col"># of Fees</th>
      <th scope="col">Payment Method</th>
      <th scope="col">Reference Number</th>
      <th scope="col">Status</th>
      <th scope="col">Reverse Action</th>

    </tr>
  </thead>
  <tbody>    
  </tbody>
</table>
</div>
</div>